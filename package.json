{
	"name": "mumps-debug",
	"displayName": "Mumps Language-Pack",
	"version": "1.3.1",
	"publisher": "jewuma",
	"description": "Debugger for Mumps (M) , GT.M, YottaDB",
	"author": {
		"name": "Jens Wulf",
		"email": "jewu34@web.de"
	},
	"license": "LGPL",
	"keywords": [
		"mumps",
		"gt.m",
		"yottadb",
		"debug"
	],
	"engines": {
		"vscode": "^1.82.2"
	},
	"icon": "images/mumps-debug-icon.png",
	"categories": [
		"Debuggers",
		"Programming Languages",
		"Formatters"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/jewuma/mumps-debug.git"
	},
	"bugs": {
		"url": "https://github.com/jewuma/mumps-debug/issues"
	},
	"scripts": {
		"test": "mocha --require ts-node/register src/**/*.test.ts",
		"compile": "tsc -p ./src",
		"eslint": "npx eslint ./src/**/*.ts",
		"ts-loader": "^6.2.2",
		"watch": "tsc -w -p ./src",
		"package": "webpack --mode production && vsce package",
		"publish": "vsce publish",
		"vscode:prepare": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch"
	},
	"dependencies": {
		"@vscode/debugadapter": "^1.59.0",
		"await-notify": "^1.0.1",
		"ts-loader": "^9.4.4"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.4",
		"@types/node": "^18.18.0",
		"@types/vscode": "^1.82.0",
		"@typescript-eslint/eslint-plugin": "^6.8.0",
		"@typescript-eslint/parser": "^6.8.0",
		"@vscode/vsce": "^2.21.0",
		"eslint": "^8.50.0",
		"typescript": "^5.2.2",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	},
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "mumps.toggleExpandedCommands",
				"title": "Toggles between Short- and Longversion of M Commands"
			},
			{
				"command": "mumps.sortRoutine",
				"title": "Sorts subroutines inside M routines"
			},
			{
				"command": "mumps.documentFunction",
				"title": "Creates comment for M subroutine"
			},
			{
				"command": "mumps.Globals.loadMore",
				"title": "Show More"
			},
			{
				"command": "mumps.Globals.refresh",
				"title": "Refresh",
				"icon": {
					"light": "images/light/refresh.svg",
					"dark": "images/dark/refresh.svg"
				}
			},
			{
				"command": "mumps.Globals.search",
				"title": "Search",
				"icon": "images/search.svg"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "global-directory",
					"title": "Global Directory",
					"icon": "images/dep.svg",
					"when": "mumps.showGlobals"
				}
			]
		},
		"views": {
			"global-directory": [
				{
					"id": "mumpsGlobals",
					"name": "Global Directory",
					"icon": "images/dep.svg",
					"contextualTitle": "Global Directory",
					"when": "mumps.showGlobals"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "mumps.Globals.refresh"
				},
				{
					"command": "mumps.Globals.search"
				}
			],
			"view/title": [
				{
					"command": "mumps.Globals.refresh",
					"icon": {
						"light": "images/light/refresh.svg",
						"dark": "images/dark/refresh.svg"
					},
					"when": "view == mumpsGlobals",
					"group": "navigation"
				},
				{
					"command": "mumps.Globals.search",
					"icon": {
						"light": "images/light/search.svg",
						"dark": "images/dark/search.svg"
					},
					"when": "view == mumpsGlobals",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "mumps.Globals.loadMore",
					"when": "viewItem == moreToCome",
					"group": "inline"
				},
				{
					"command": "mumps.Globals.refresh",
					"when": "view == mumpsGlobals && viewItem == GlobalNode",
					"icon": {
						"light": "images/light/refresh.svg",
						"dark": "images/dark/refresh.svg"
					}
				},
				{
					"command": "mumps.Globals.search",
					"icon": {
						"light": "images/light/search.svg",
						"dark": "images/dark/search.svg"
					},
					"group": "inline"
				}
			]
		},
		"debuggers": [
			{
				"type": "mumps",
				"label": "Mumps Debugger",
				"program": "./dist/extension",
				"runtime": "node",
				"languages": [
					"mumps"
				],
				"configurationAttributes": {
					"launch": {
						"required": [
							"program",
							"hostname",
							"localRoutinesPath"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:mumps.getEntryRef}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"hostname": {
								"type": "string",
								"description": "The Host which runs MDEBUG",
								"default": "localhost"
							},
							"localRoutinesPath": {
								"type": "string",
								"description": "The Path to map .m Files to local Files"
							},
							"port": {
								"type": "number",
								"description": "The Communication-Port to MDEBUG",
								"default": 9000
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "mumps",
						"request": "launch",
						"name": "Active File",
						"program": "${file}",
						"hostname": "localhost",
						"port": 9000,
						"localRoutinesPath": "y:\\",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "Mumps Debug: Launch",
						"description": "Launch and debug active File",
						"body": {
							"type": "mumps",
							"request": "launch",
							"name": "Active File",
							"program": "${file}",
							"hostname": "localhost",
							"port": 9000,
							"localRoutinesPath": "y:\\",
							"stopOnEntry": true
						}
					},
					{
						"label": "Mumps Debug: Launch",
						"description": "Start at individual Entry-Ref.",
						"body": {
							"type": "mumps",
							"request": "launch",
							"name": "Ask for Entryref",
							"program": "${command:AskForProgramName}",
							"stopOnEntry": true
						}
					}
				]
			}
		],
		"variables": {
			"AskForProgramName": "extension.mumps-debug.getProgramName"
		},
		"languages": [
			{
				"id": "mumps",
				"aliases": [
					"MUMPS",
					"mumps"
				],
				"extensions": [
					".int",
					".m",
					".mps"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "mumps",
				"scopeName": "source.mumps",
				"path": "./syntaxes/mumps.tmLanguage"
			}
		],
		"keybindings": [
			{
				"command": "mumps.documentFunction",
				"key": "ctrl+d",
				"when": "editorLangId == mumps"
			},
			{
				"command": "mumps.toggleExpandedCommands",
				"key": "ctrl+e",
				"when": "editorLangId == mumps"
			},
			{
				"command": "mumps.autoSpaceEnter",
				"when": "editorLangId == mumps && editorTextFocus",
				"key": "enter"
			},
			{
				"command": "mumps.autoSpaceTab",
				"when": "editorLangId == mumps && !suggestWidgetVisible",
				"key": "tab"
			},
			{
				"command": "mumps.sortRoutine",
				"key": "ctrl+alt+s",
				"when": "editorLangId == mumps"
			}
		],
		"configurationDefaults": {
			"[mumps]": {
				"editor.insertSpaces": false,
				"editor.formatOnSave": true
			}
		},
		"breakpoints": [
			{
				"language": "mumps"
			}
		],
		"semanticTokenScopes": [
			{
				"language": "mumps",
				"scopes": {
					"global": [
						"variable.other.constant"
					],
					"local": [
						"variable.language.local"
					],
					"entryref": [
						"entity.name.type.class"
					],
					"number": [
						"constant.numeric"
					],
					"ifunction": [
						"support.function.mumps"
					],
					"exfunction": [
						"support.variable.property"
					],
					"operator": [
						"keyword.operator"
					],
					"string": [
						"string.quoted.double"
					],
					"sysvariable": [
						"variable.language.local"
					],
					"keyword": [
						"keyword.control"
					],
					"nonMfunction": [
						"support.function.user"
					],
					"comment": [
						"comment.line.mumps"
					]
				}
			}
		],
		"configuration": {
			"title": "mumps-debug",
			"properties": {
				"mumps.variablesToBeIgnoredAtNewCheck": {
					"type": "string",
					"default": "",
					"description": "Variables (REGEX) separate by comma that can be ignored at subroutine check"
				},
				"mumps.enableVariableCheck": {
					"type": "boolean",
					"default": true,
					"description": "Check if Variable are NEWed in subroutines"
				}
			}
		}
	}
}
