{
	"name": "mumps-debug",
	"displayName": "Mumps Debugger",
	"version": "0.4.0",
	"publisher": "jewuma",
	"description": "Debugger for Mumps (M) , GT.M, YottaDB",
	"author": {
		"name": "Jens Wulf",
		"email": "jewu34@web.de"
	},
	"license": "LGPL",
	"keywords": [
		"mumps",
		"gt.m",
		"yottadb",
		"debug"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"icon": "images/mumps-debug-icon.png",
	"categories": [
		"Debuggers",
		"Programming Languages",
    "Formatters"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/jewuma/mumps-debug.git"
	},
	"bugs": {
		"url": "https://github.com/jewuma/mumps-debug/issues"
	},
	"scripts": {
		"prepare": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"package": "vsce package",
		"publish": "vsce publish",
		"vscode:prepare": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"vscode-debugadapter": "1.38.0-pre.4"
	},
	"devDependencies": {
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.43.0",
		"ts-loader": "^6.2.2",
		"tslint": "5.18.0",
		"typescript": "3.5.3",
		"vsce": "^1.75.0",
		"webpack": "^4.42.1",
		"emcellent": "0.0.5",
		"webpack-cli": "^3.3.11"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onLanguage:mumps",
		"onDebug"
	],
	"contributes": {
		"themes": [
			{
					"label": "Mumps-Syntax-Higlight",
					"uiTheme": "vs-dark",
					"path": "./syntaxes/mumps.tmTheme"
			}
		],
		"variables": {
			"AskForProgramName": "extension.mumps-debug.getProgramName"
		},
		"languages": [
      {
        "id": "mumps",
        "aliases": [
          "MUMPS",
          "mumps"
        ],
        "extensions": [
          ".int",
          ".m",
          ".mps",
          ".zwr"
        ],
        "configuration": "./language-configuration.json"
      }
		],
    "grammars": [
      {
        "language": "mumps",
        "scopeName": "source.mumps",
        "path": "./syntaxes/mumps.tmLanguage"
      }
    ],
    "keybindings": [
      {
        "command": "mumps.documentFunction",
        "key": "ctrl+d",
        "when": "editorLangId == mumps"
      },
      {
        "command": "mumps.autoSpaceEnter",
        "when": "editorLangId == mumps",
        "key": "enter"
      },
      {
        "command": "mumps.autoSpaceTab",
        "when": "editorLangId == mumps && !suggestWidgetVisible",
        "key": "tab"
      }
    ],
    "configurationDefaults": {
      "[mumps]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true
      }
    },
		"breakpoints": [{
			"language": "mumps"
		}],
		"debuggers": [{
			"type": "mumps",
			"label": "Mumps Debugger",
			"program": "./out/extension",
			"runtime": "node",
			"languages": ["mumps"],
			"configurationAttributes": {
				"launch": {
					"required": [
						"program",
						"hostname",
						"localRoutinesPath"
					],
					"properties": {
						"program": {
							"type": "string",
							"description": "Absolute path to a text file.",
							"default": "${workspaceFolder}/${command:mumps.getEntryRef}"
						},
						"stopOnEntry": {
							"type": "boolean",
							"description": "Automatically stop after launch.",
							"default": true
						},
						"trace": {
							"type": "boolean",
							"description": "Enable logging of the Debug Adapter Protocol.",
							"default": true
						},
						"hostname": {
							"type": "string",
							"description": "The Host which runs MDEBUG",
							"default": "localhost"
						},
						"localRoutinesPath": {
							"type": "string",
							"description": "The Path to map .m Files to local Files"
						},
						"port": {
							"type": "number",
							"description": "The Communication-Port to MDEBUG",
							"default": 9000
						}
					}
				}
			},
			"initialConfigurations": [{
				"type": "mumps",
				"request": "launch",
				"name": "Active File",
				"program": "${file}",
				"hostname": "localhost",
				"port": 9000,
				"localRoutinesPath": "y:\\",
				"stopOnEntry": true
			}],
			"configurationSnippets": [{
					"label": "Mumps Debug: Launch",
					"description": "Launch and debug active File",
					"body": {
						"type": "mumps",
						"request": "launch",
						"name": "Active File",
						"program": "${file}",
						"hostname": "localhost",
						"port": 9000,
						"localRoutinesPath": "y:\\",
						"stopOnEntry": true
					}
				},
				{
					"label": "Mumps Debug: Launch",
					"description": "Start at individual Entry-Ref.",
					"body": {
						"type": "mumps",
						"request": "launch",
						"name": "Ask for Entryref",
						"program": "${command:AskForProgramName}",
						"stopOnEntry": true
					}
				}
			]
		}]
	}
}
